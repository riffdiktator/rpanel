
<%= form_for :page, url: admin_pages_path do |f| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Dodaj nową podstronę</h3>
  </div>


<div class="panel-body">
	<div class="row">
		<div class="col-md-12">
			<%= f.text_field :title, :class => "form-control input-lg", :placeholder => "Tytuł podstrony" %>
		</div>
	</div>
	<div class="row newPageMain">
		<div class="col-md-8 col-lg-8">
			<%= f.text_area :text, :class => "tinymce" %>
		</div>
		<div class="col-md-4">
			<div class="checkbox">
			<label>
				<%= f.check_box :in_menu %> Dodaj do menu strony
			</label>
			</div>
		</div>
	</div>
</div>
<div class="panel-footer">
	<div class="row">
		<div class="col-md-12">


			<button class="btn btn-success pull-right submitPage" type="submit"><i class="fa fa-floppy-o"></i> Zapisz</button>

			<%= link_to(admin_pages_path, :class => "btn btn-default pull-right") do %>
			<i class="fa fa-reply"></i> Poniechaj
			<% end %>
		</div>
	</div>
</div>

</div>
<% end %>